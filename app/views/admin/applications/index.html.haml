.card.table-card
  .actionbar
    .title Application List
    .flex
  
  %table.table
    %thead
      %tr
        %th Application Number
        %th Notified Authority
        %th Jurisdiction
        %th Concern name	
          
  
    %tbody
      - @applications.each do |application|
        %tr
          %td= application.form_a1.application_number
          %td= application.form_a1.role.name
          %td= application.form_a1.jurisdiction.name[@language]
          %td= application.form_a1.concern_name
