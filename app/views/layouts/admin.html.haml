!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Agrisnet Admin
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body.admin-body
    .wrapper
      %nav#sidebar
        / Sidebar Header
        .sidebar-header
          %h1.header-2
            =image_tag('logo.png', width: 40)
            agrisnet
        / Sidebar Links
        %ul.list-unstyled.components
          %li.active
            %a{:href => admin_root_path} Dashboard
          %li
            / Link with dropdown items
            %a{"aria-expanded" => "false", "data-toggle" => "collapse", :href => "#usersSubmenu"} User Manager
            %ul#usersSubmenu.collapse.list-unstyled
              %li
                %a{:href => admin_users_path} List
              %li
                %a{:href => new_admin_user_path} Create
          %li
            / Link with dropdown items
            %a{"aria-expanded" => "false", "data-toggle" => "collapse", :href => "#educationsSubmenu"} Education Manager
            %ul#educationsSubmenu.collapse.list-unstyled
              %li
                %a{:href => new_admin_education_path} Create Education
              %li
                %a{:href => admin_educations_path} List Educations
          %li
            / Link with dropdown items
            %a{"aria-expanded" => "false", "data-toggle" => "collapse", :href => "#applicantsSubmenu"} Applicant User
            %ul#applicantsSubmenu.collapse.list-unstyled
              %li
                %a{:href => admin_applicants_path} List Applicants
          %li
            %a{:href => "#"} Sales applications
          %li
            / Link with dropdown items
            %a{"aria-expanded" => "false", "data-toggle" => "collapse", :href => "#certificateRuleSubmenu"} Role & Certificate
            %ul#certificateRuleSubmenu.collapse.list-unstyled
              %li
                %a{:href => new_admin_certificate_rule_path} Create Role & Certificate
              %li
                %a{:href => admin_certificate_rules_path} List Role & Certificate
          %li
            = link_to  "Logout", destroy_admin_user_session_path, method: :delete

      #content
        -# %button#sidebarCollapse.btn.btn-info.navbar-btn{:type => "button"}
        -#   %i.glyphicon.glyphicon-align-left
        -#   Toggle Sidebar
        = yield

  %footer
    :javascript
      $('#sidebarCollapse').on('click', function () {
          $('#sidebar').toggleClass('active');
          $('#content').toggleClass('active');
      });
